<div class="container">
  <div class="map-card">
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3 text-center">
        <h1>Book : <%= @exchange.title %></h1>
        Between : <%=@exchange.start_date%> and <%= @exchange.end_date %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4 padded">
        <%= simple_form_for [:account, @exchange, @booking] do |f| %>
          <%= f.error_notification %>

          <%= f.input :meeting_date %>
          <%= f.input :message, as: :text %>

          <%= f.button :submit, "Book", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
