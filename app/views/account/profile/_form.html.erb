<%= simple_form_for @user, url: account_profile_path do |f| %>
  <%= f.error_notification %>

  <div class="row padded">
    <div class="col-xs-12 col-md-4 col-md-offset-1">
      <%= image_tag "placeholder.png", class: "profile-pict"%>
      <%= f.input :picture %>
    </div>
    <div class="col-xs-12 col-md-3">
      <%= f.input :first_name %>
      <%= f.input :last_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-1">
      <%= f.button :submit, "Save", class: 'btn btn-primary edit-btn'%>
    </div>
    <div class="col-xs-12 col-md-4 col-md-offset-1">
      <%= link_to edit_user_registration_path, class: "btn btn-info edit-btn center" do %>
          Change your password
      <% end %>
    </div>
  </div>
<% end %>
