        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">
        <%= image_tag "monea-logo-bar.png" %>
      </a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
          <li>
            <%= link_to new_account_exchange_path do %>
              <i class="fa fa-upload"></i> <%= t(".posts", default: "Post an Exchange") %>
            <% end %>
          </li>
          <li>
            <%= link_to account_exchanges_path do %>
              <i class="fa fa-exchange"></i> <%= t(".exchanges", default: "Discover All Exchanges") %>
            <% end %>
          </li>
